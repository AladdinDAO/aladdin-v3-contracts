{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/contracts/*": ["scripts/contracts/*"],
      "@/types/*": ["scripts/@types/*"],
      "@/utils/*": ["scripts/utils/*"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["scripts", "./test", "./typechain"],
  "files": ["./hardhat.config.ts"]
}
