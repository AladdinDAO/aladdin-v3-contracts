{
  "name": "aladdin-v3-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "npx hardhat test",
    "build": "npx hardhat compile",
    "votium:vote": "yarn ts-node scripts/votium/optimal_vote.ts",
    "votium:proof": "yarn ts-node scripts/votium/get_proof.ts --round",
    "votium:harvest": "env HARDHAT_NETWORK=mainnet yarn ts-node scripts/votium/harvest.ts --round",
    "sdcrv:harvest": "env HARDHAT_NETWORK=mainnet yarn ts-node scripts/stakedao/harvest.ts --round",
    "cvxcrv:weight": "env HARDHAT_NETWORK=mainnet yarn ts-node scripts/cvxcrv_optimal_apr.ts --holder",
    "solhint": "./node_modules/.bin/solhint -f table 'contracts/**/*.sol'",
    "prettier:solidity": "./node_modules/.bin/prettier --write 'contracts/**/*.sol'",
    "prettier": "./node_modules/.bin/prettier --write 'test/**/*.ts' 'scripts/**/*.ts' *.ts",
    "coverage": "hardhat coverage"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-vyper": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@snapshot-labs/snapshot.js": "^0.4.71",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/asciichart": "^1.5.6",
    "@types/chai": "^4.2.21",
    "@types/edit-json-file": "^1.7.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "asciichart": "^1.5.25",
    "axios": "^1.2.3",
    "chai": "^4.2.0",
    "commander": "^9.3.0",
    "dotenv": "^10.0.0",
    "edit-json-file": "^1.7.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.7.2",
    "firebase": "^9.8.2",
    "hardhat": "^2.14.1",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "tty-table": "^4.1.6",
    "typechain": "^8.1.0",
    "typescript": "^4.5.2",
    "undici": "^5.22.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.4.1-solc-0.7-2",
    "@openzeppelin/contracts-upgradeable": "3.4.1-solc-0.7-2"
  },
  "lint-staged": {
    "*.{js,ts}": "npx eslint --cache --fix",
    "*.sol": "prettier --ignore-unknown --write"
  }
}
